<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.1/socket.io.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

   <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: #202020;
            font-family: Arial, sans-serif;
        }


        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 10px;
        }

        .backgroundimg {
            background-image: url('images/chat-back.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            padding: 10px; /* Padding for better spacing */
        }

         
        .form-rounded {
            border-radius: 1rem;
        }
         



        #messages {
            list-style-type: none;
            margin: 0;
            padding: 0;
            background-color: whitespace;
            border-radius: 5px;
            background-color: #0096FF	;


            
        }

        #messages > li {
            padding: 0.5rem 1rem;
            border-style: solid;
            border-color: #202020;
            border-radius: 10px;

        }

        #input {
            width: 100%; /* Make the input field full width */
        }




        

        @media (max-width: 768px) {
            .backgroundimg {
                margin: 10px;
            }

            #messages > li {
                padding: 0.25rem 0.5rem;
            }

            .form-input-container {
                padding: 0 10px;
            }

            .form-button-container {
                text-align: center;
                margin-top: 10px;
                margin-bottom: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 style="color: white;"><b>Chat Application</b></h1>
    </div>

    <input id="myname" type="submit" value="<%= username %>" class="btn btn-primary" style="margin: 10px 0px 10px 110px; ">

    <form action="/logout">
        <input type="submit" value="Logout" class="btn btn-primary" style="margin: -100px 0px 10px 1400px; ">
    </form>

    <h1 class="text-center" style="color: white;">Welcome to Chat Application</h1>

    <div class="backgroundimg">
        <br>
        <ul id="messages"></ul>
        <br>
        <form id="form">
            <div class="form-input-container ">
                <textarea id="input" placeholder="Enter the message <%= username %>" name="message" rows="4" cols="70"></textarea>
            </div>
            <div class="form-button-container">
                <input type="submit" value="Send" class="btn btn-success" style="margin-top: 10px; margin-bottom: 10px;">
            </div>
        </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();
        var messages = document.getElementById('messages');
        var form = document.getElementById('form');
        var input = document.getElementById('input');
    
        form.addEventListener("submit", function (e) {
            e.preventDefault();
            var myname1 = document.getElementById('myname').value;
            var message = input.value;
            
            if (message && myname1) {
                var chatMessage = myname1 + ": " + message;
                socket.emit('chat message', chatMessage);
                input.value = '';
            }
        });
    
        socket.on('chat message', function (msg) {
            var messageElement = document.createElement('li');
            messageElement.textContent = msg;
            
            // Adjust styles for different screen sizes
            if (window.innerWidth <= 768) {
                messageElement.style.padding = "5px";
            } else if (window.innerWidth <= 1024) {
                messageElement.style.padding = "10px";
            } else {
                messageElement.style.padding = "15px";
            }
    
            messages.appendChild(messageElement);
        });
    
        // Add a window resize event listener to update styles on screen size changes
        window.addEventListener("resize", function () {
            // Handle screen size changes here
            // You can adjust styles dynamically based on the new window.innerWidth
        });
    </script>
    
</body>
</html>
